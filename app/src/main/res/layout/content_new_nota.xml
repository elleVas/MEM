<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_new_nota"
    tools:context="com.android.lele_phobia.mem.NewNotaActivity"
    android:nestedScrollingEnabled="false"
    android:touchscreenBlocksFocus="true">

    <EditText
        android:hint="titolo"
        android:id="@+id/titoloNota"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="top"
        android:padding="4dp"
        android:textSize="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/invDescription"
        android:layout_alignEnd="@+id/invDescription"
        android:textStyle="bold|italic" />
    <EditText
        android:hint="testo nota"
        android:id="@+id/invDescription"
        android:layout_width="1150dp"
        android:layout_height="175dp"
        android:gravity="top"
        android:padding="4dp"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titoloNota"
        android:clickable="false"
        android:textStyle="italic"
        android:textIsSelectable="false"
        android:layout_alignParentBottom="true" />






</RelativeLayout>
