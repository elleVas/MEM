<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_new_nota"
    tools:context="com.android.lele_phobia.mem.NewNotaActivity">

    <EditText
        android:hint="TITOLO"
        android:id="@+id/titoloNota"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="top"
        android:padding="4dp"
        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/invDescription"
        android:layout_alignEnd="@+id/invDescription" />
    <EditText
        android:hint="testo"
        android:id="@+id/invDescription"
        android:layout_width="1150dp"
        android:layout_height="175dp"
        android:gravity="top"
        android:padding="4dp"
        android:textSize="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titoloNota"
        android:layout_above="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva"
        android:onClick="newNota"
        android:id="@+id/button"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
